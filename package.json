{
  "name": "abstracted-admin",
  "version": "0.7.2",
  "description": "Helpful abstraction on the firebase admin API",
  "license": "MIT",
  "repository": "https://github.com/forest-fire/fireadmin",
  "author": "Ken Snyder <ken@ken.net>",
  "keywords": ["firebase", "typescript", "nodejs", "utility", "admin"],
  "files": ["lib"],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "build": "ts-node ./scripts/build.ts",
    "test": "ts-node ./scripts/test.ts",
    "coverage":
      "nyc --include='src/**/*.ts' --reporter=text --reporter=html --reporter=lcov mocha --compilers ts:ts-node/register --recursive 'test/**/*.test.ts'",
    "watch": "npm run build -- --watch",
    "deploy": "ts-node ./scripts/deploy.ts ",
    "watch:test": "npm run test -- --watch"
  },
  "dependencies": {
    "common-types": "^1.4.2",
    "firebase-admin": "^5.6.0",
    "lodash-es": "^4.17.4",
    "moment": "^2.18.1",
    "serialized-query": "^0.2.6",
    "typed-conversions": "^0.7.3"
  },
  "peerDependencies": {
    "firemock": "^0.13.1",
    "faker": "^4.1.0",
    "chance": "^1.0.10"
  },
  "devDependencies": {
    "@types/chai": "^3.0.0",
    "@types/chalk": "^0.4.31",
    "@types/chance": "^0.7.34",
    "@types/faker": "^4.1.0",
    "@types/js-yaml": "^3.9.0",
    "@types/lodash-es": "^4.17.0",
    "@types/mocha": "^2.0.0",
    "@types/node": "^6.0.0",
    "@types/rimraf": "^2.0.1",
    "@types/shelljs": "^0.7.4",
    "chai": "^3.0.0",
    "coveralls": "^2.0.0",
    "gitbook-plugin-favicon": "^0.0.2",
    "js-yaml": "^3.9.1",
    "mocha": "^3.0.0",
    "nyc": "^10.0.0",
    "rimraf": "^2.6.2",
    "shelljs": "^0.7.8",
    "test-console": "^1.0.0",
    "ts-node": "^3.0.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.3"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "nyc": {
    "include": ["src/**/*.ts"],
    "exclude": ["lib"],
    "extension": [".ts"],
    "require": ["ts-node/register"],
    "reporter": [],
    "all": true
  }
}
